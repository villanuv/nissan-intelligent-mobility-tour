<div class="row">
	<div class="col-4"><%= image_tag "nissan_logo.jpg" %></div>
	<div class="col-8 text-right">
		<h2 class="pt-3">Nissan Intelligent Mobility Tour</h2>
		<h5>Fillmore Jazz Festival</h5>
	</div>
</div>

<div class="row mt-3">
	<div class="col d-none d-sm-block"><%= image_tag "hero_image.jpg", class: "hero-image" %></div>
</div>

<%= form_for @user do |f| %>
	<% flash.each do |key, value| %>
	<div class="row <%= flash_class(key) %>">
		<div class="col"><%= value %></div>
	</div>
	<% end %>

	<div class="row mt-3 pt-4">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<sup>*</sup><%= f.label :first_name, "First Name" %><br />
			<div class="input-group">
			<%= f.text_field :first_name, class: "border-radius" %>
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<sup>*</sup><%= f.label :last_name, "Last Name" %><br />
			<%= f.text_field :last_name, class: "border-radius" %><br />
		</div>		
	</div>

	<div class="row mt-2 pt-2">
		<div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-xl-8">
			<sup>*</sup><%= f.label :street_address, "Address" %><br />
			<%= f.text_field :street_address, class: "border-radius" %>
		</div>

		<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
			<label for="">Apt/Suite</label>
			<input type="text" class="border-radius" />
		</div>
	</div>

	<div class="row mt-2 pt-2">
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
			<sup>*</sup><%= f.label :city %><br />
			<%= f.text_field :city, class: "border-radius" %><br />
		</div>

		<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
			<sup>*</sup><%= f.label :state_abbr, "State" %><br />
			<%= f.select(:state_abbr, options_for_select(us_states, "")) %>
		</div>

		<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
			<sup>*</sup><%= f.label :zip_code, "Zip" %><br />
			<%= f.text_field :zip_code, class: "border-radius" %><br />
		</div>
	</div>

	<div class="row mt-2 pt-2">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<sup>*</sup><%= f.label :email %><br />
			<%= f.text_field :email, class: "border-radius" %><br />
		</div>
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<label for="">Email confirmation</label>
			<input type="text" class="border-radius" />
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
			<div class="bg-light border-radius px-3 py-3">
			<sup>*</sup>I plan on purchasing my next vehicle within
			<ul class="mt-3 mb-0">
			<% @purchase_period_options.each do |button| %>
				<li><%= f.radio_button :purchase_period, button %><%= f.label :purchase_period, button %></li>
			<% end %>
			</ul>
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 row-height-fix">
			<div class="bg-light border-radius px-3 py-3 row-height-fix-child">
			<sup>*</sup>I am interested in the following Vehicles
			<ul class="mt-3 mb-0">
			<% @vehicles.each do |vehicle| %>
			<li><%= f.check_box :vehicles, {}, vehicle %> <%= f.label :vehicle, vehicle %></li>
			<% end %>
			</ul>
			</div>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col">
			<div class="bg-light border-radius px-3 py-2">
			<sup>*</sup>How likely would you be to consider Nissan for your next new vehicle purchase?
			<ul class="mt-3 mb-0">
			<% @consideration.each do |consider_option| %>
			<li><%= f.radio_button :consider_nissan, consider_option %><%= f.label :consider_nissan, consider_option %></li>
			<% end %>
			</ul>
			</div>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col">
			<div class="bg-light border-radius px-3 py-3">
			<sup>*</sup>What is your overall opinion of Nissan?<br />
			<table class="mt-3 mb-0"><tr>
				<td class="align-bottom table-label"><small>Excellent</small></td>
				<% (1..10).to_a.reverse.each do |number| %>
				<td class="table-cell-width">
					<%= number %><div class="pt-0 table-rank"><%= f.radio_button :opinion, number %></div>
				</td>
				<% end %>
				<td class="align-bottom"><small>Poor</small></td>
			</tr></table>
			</div>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col">
			<div class="bg-light border-radius px-3 py-3">
			<sup>*</sup>How would you like to participate in today's experience?
			<ul class="mt-3 mb-0">
			<li><%= f.radio_button :participation, "driver", checked: true %><%= f.label :participation, "I will be driving today or may want to drive." %></li>
			<li><%= f.radio_button :participation, "passenger" %><%= f.label :participation, "I would prefer to ride today." %></li>
			</ul>
			</div>
		</div>
	</div>

