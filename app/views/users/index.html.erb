	<div class="row mt-2">
		<div class="col">
		<%= f.check_box :agree_to_terms %><sup>*</sup>I have read and understood this entire agreement.
		</div>
	</div>

	<div class="row mt-3 mb-2">
		<div class="col">
		<input type="checkbox" />I have requested that the minor(s) listed below be allowed to accompany me as a passenger in the Event.
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="border signature-box">
				<canvas></canvas>
			</div>
			<div class="text-uppercase font-weight-bold">Signed on: <%= @date %></div>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col">
		<%= f.check_box :opt_in_news, checked: true %><%= f.label :opt_in_news, "I would like to receive exciting product and event news from Nissan." %>
		</div>
	</div>

	<div class="row mb-4">
		<div class="col">
		<%= f.check_box :contact_me %><%= f.label :contact_me, "I would like to be contacted by a Nissan dealer for more vehicle information." %>
		</div>
	</div>

	<div class="row mb-4">
		<div class="col">
			<%= f.submit "Submit", class: "btn btn-submit" %>
		</div>
	</div>
<% end %>